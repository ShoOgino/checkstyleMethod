    public void testLineBreakCharArray()
    {
        final StringArrayReader o =
            new StringArrayReader(new String[] {"a", "bc"});
        try {
            char[] a = new char[1];
            int count = o.read(a, 0, 1);
            assertEquals(1, count);
            assertEquals('a', a[0]);
            int nl1 = o.read();
            assertEquals('\n', nl1);
            int b = o.read();
            assertEquals('b', b);
            int c = o.read();
            assertEquals('c', c);
            int nl2 = o.read();
            assertEquals('\n', nl2);
            int eof = o.read();
            assertEquals(-1, eof);
        }
        catch (IOException ex) {
        }
    }

