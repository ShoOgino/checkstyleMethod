    public void testNoCheck()
        throws CheckstyleException
    {
        try
        {
            final FilterChain fc =
                SuppressionsLoader.loadSuppressions(
                    "src/testinputs/com/puppycrawl/tools/checkstyle/suppressions_no_check.xml");
