    /** @see Verifier **/
    public void verifyLeftCurly(String aText,
                                boolean aAllowIf,
                                String aConstruct,
                                int aLineNo)
    {
        if (mConfig.isIgnoreBraces()) {
            return;
        }

        if (!"{".equals(aText) && !(aAllowIf && "if".equals(aText))) {
            log(aLineNo, "'" + aConstruct + "' construct must use '{}'s.");
        }
    }

