    /** @see AuditListener **/
    public void addError(AuditEvent aEvt)
    {
        mWriter.print("<error" + " line=\"" + aEvt.getLine() + "\"");
        if (aEvt.getColumn() > 0) {
            mWriter.print(" column=\"" + aEvt.getColumn() + "\"");
        }
        mWriter.println(" message=\"" + encode(aEvt.getMessage()) + "\"/>");
    }

