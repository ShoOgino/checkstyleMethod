    /**
     * Report that a statement should be using a compound statement
     * (that is, {}'s).
     * @param aStmt the token for the statement
     */
    void reportNeedBraces(Token aStmt)
    {
        if (mConfig.isIgnoreBraces()) {
            return;
        }

        log(aStmt.getLine(),
            "'" + aStmt.getText() + "' construct must use '{}'s.");
    }

