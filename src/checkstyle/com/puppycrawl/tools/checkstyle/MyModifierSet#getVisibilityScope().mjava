    /** @return the visibility scope of the modifiers. */
    Scope getVisibilityScope()
    {
        if (containsPublic()) {
            return Scope.PUBLIC;
        }
        else if (containsProtected()) {
            return Scope.PROTECTED;
        }
        else if (containsPrivate()) {
            return Scope.PRIVATE;
        }
        return Scope.PACKAGE;
    }

