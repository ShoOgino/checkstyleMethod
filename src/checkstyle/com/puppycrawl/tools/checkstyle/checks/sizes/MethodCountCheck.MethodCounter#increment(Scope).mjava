        /**
         * Increments to counter by one for the supplied scope.
         * @param aScope the scope counter to increment.
         */
        void increment(Scope aScope)
        {
            mTotal++;
            if (mInInterface) {
                mCounts.put(Scope.PUBLIC, 1 + value(Scope.PUBLIC));
            }
            else {
                mCounts.put(aScope, 1 + value(aScope));
            }
        }

