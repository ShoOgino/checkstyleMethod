    /** {@inheritDoc} */
    public void visitToken(DetailAST aAST)
    {
        if (isInContext(aAST, ALLOWED_ASSIGMENT_CONTEXT)) {
            return;
        }

        if (isInNoBraceControlStatement(aAST)) {
            return;
        }

        if (isInWhileIdiom(aAST)) {
            return;
        }

        log(aAST.getLineNo(), aAST.getColumnNo(), "assignment.inner.avoid");
    }

