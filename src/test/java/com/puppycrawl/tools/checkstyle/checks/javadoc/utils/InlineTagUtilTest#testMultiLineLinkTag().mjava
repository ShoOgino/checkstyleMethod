    @Test
    public void testMultiLineLinkTag() {
        final String[] text = {
            "/**",
            " * {@link foo",
            " *        bar baz}",
            " */"};

        final List<TagInfo> tags = InlineTagUtil.extractInlineTags(text);

        assertEquals("Unexpected tags size", 1, tags.size());
        assertTag(tags.get(0), "link", "foo bar baz", 2, 4);
    }

