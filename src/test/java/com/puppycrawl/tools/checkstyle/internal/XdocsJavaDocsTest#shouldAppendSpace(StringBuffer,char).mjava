    private static boolean shouldAppendSpace(StringBuffer text, char firstCharToAppend) {
        final boolean result;

        if (text.length() == 0) {
            result = false;
        }
        else {
            final char last = text.charAt(text.length() - 1);

            result = firstCharToAppend != ':' && !Character.isWhitespace(last);
        }

        return result;
    }

