    /**
     * Method dump.
     * @param config
     */
    private static void dump(Configuration aConfig, int aLevel)
    {
        for (int i = 0; i < aLevel; i++) {
            System.out.print("  ");
        }
        dumpDetails(aConfig);
        final Configuration[] children = aConfig.getChildren();
        for (int i = 0; i < children.length; i++) {
            dump(children[i], aLevel + 1);
        }          
    }

