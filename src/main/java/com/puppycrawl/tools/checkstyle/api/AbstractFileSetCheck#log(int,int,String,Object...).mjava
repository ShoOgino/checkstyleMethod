    @Override
    public final void log(int lineNo, int colNo, String key,
            Object... args) {
        MESSAGE_COLLECTOR.get().add(
                new LocalizedMessage(lineNo,
                        colNo,
                        getMessageBundle(),
                        key,
                        args,
                        getSeverityLevel(),
                        getId(),
                        getClass(),
                        getCustomMessages().get(key)));
    }

