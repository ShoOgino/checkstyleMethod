    /**
     * Retrieves the compile flags for the regular expression being built based
     * on {@code matchAcrossLines}.
     * @return The compile flags.
     */
    private int getRegexCompileFlags() {
        final int result;

        if (matchAcrossLines) {
            result = Pattern.DOTALL;
        }
        else {
            result = Pattern.MULTILINE;
        }

        return result;
    }

