        /**
         * Builds enum value from boolean.
         * @param val value.
         * @return enum instance.
         *
         * @noinspection BooleanParameter
         */
        public static LineWrappingOptions ofBoolean(boolean val) {
            if (val) {
                return IGNORE_FIRST_LINE;
            }
            else {
                return NONE;
            }
        }

