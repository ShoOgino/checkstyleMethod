    @Override
    public void destroy() {
        for (Check c : ordinaryChecks) {
            c.destroy();
        }
        for (Check c : commentChecks) {
            c.destroy();
        }
        if (cache != null) {
            try {
                cache.persist();
            }
            catch (IOException e) {
                throw new IllegalStateException("Unable to persist cache file", e);
            }
        }
        super.destroy();
    }

