    @Override
    public void destroy() {
        for (AbstractCheck check : ordinaryChecks) {
            check.destroy();
        }
        for (AbstractCheck check : commentChecks) {
            check.destroy();
        }
        if (cache != null) {
            try {
                cache.persist();
            }
            catch (IOException ex) {
                throw new IllegalStateException("Unable to persist cache file", ex);
            }
        }
        super.destroy();
    }

